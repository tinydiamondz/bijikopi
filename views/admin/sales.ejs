<%- include('./partials/_headerAdmin') %>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>Laporan Penjualan</h1>
        <a href="/admin/sales/export" class="btn" style="background-color: #28a745; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; font-weight: bold;">
            ðŸ“¥ Download Laporan (CSV)
        </a>
    </div>

    <div class="dashboard-cards" style="margin-bottom: 20px;">
        <div class="card card-total">
            <h3>Total Pendapatan Keseluruhan</h3>
            <div class="number">Rp <%= new Intl.NumberFormat('id-ID').format(grand_total) %></div>
        </div>
    </div>

    <div style="margin-bottom: 30px;">
        <input type="text" id="searchInput" placeholder="ðŸ” Cari Bulan, Tahun, atau Nama Produk..." style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 16px;">
    </div>

    <div id="noDataMessage" style="display: none; text-align: center; padding: 40px; background: #fff3cd; border: 1px solid #ffeeba; border-radius: 8px; color: #856404; margin-bottom: 20px;">
        <h3 style="margin: 0;">ðŸš« Data tidak ditemukan</h3>
        <p style="margin: 10px 0 0 0;">Coba kata kunci pencarian yang lain.</p>
    </div>

    <% const months = Object.keys(groupedSales); %>
    
    <% if (months.length > 0) { %>
        <div id="salesDataContainer"> <% months.forEach(month => { %>
                
                <div class="month-container">
                    
                    <h2 class="month-title" style="margin-top: 40px; border-bottom: 2px solid #d4a373; padding-bottom: 10px; color: #8b5e3c;">
                        ðŸ“… Bulan: <%= month %>
                    </h2>

                    <div style="overflow-x: auto; margin-bottom: 20px;">
                        <table class="sales-table">
                            <thead>
                                <tr>
                                    <th style="width: 5%;">No</th>
                                    <th>Produk / Item</th>
                                    <th style="text-align: center;">Jumlah Terjual</th>
                                    <th>Total Harga</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% groupedSales[month].forEach((item, index) => { %>
                                
                                <tr class="search-item">
                                    <td><%= index + 1 %></td>

                                    <td class="product-name" style="font-weight: 600; color: #2c3e50;">
                                        <%= item.item_name %>
                                    </td>

                                    <td style="text-align: center;">
                                        <span style="background: #e9ecef; padding: 4px 10px; border-radius: 10px; font-weight: bold;">
                                            <%= item.total_qty %>
                                        </span>
                                    </td>

                                    <td style="font-weight: 600; color: #28a745;">
                                        Rp <%= new Intl.NumberFormat('id-ID').format(item.total_revenue) %>
                                    </td>
                                </tr>
                                <% }) %>
                                
                                <% 
                                    let subtotalMonth = groupedSales[month].reduce((acc, curr) => acc + curr.total_revenue, 0);
                                %>
                                <tr class="subtotal-row" style="background-color: #fff3cd;">
                                    <td colspan="3" style="text-align: right; font-weight: bold;">Total Pendapatan <%= month %>:</td>
                                    <td style="font-weight: bold; color: #d35400;">
                                        Rp <%= new Intl.NumberFormat('id-ID').format(subtotalMonth) %>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div> <% }) %>
        </div>
    <% } else { %>
        <div style="text-align: center; padding: 50px; background: #f9f9f9; border-radius: 10px;">
            <h3>Belum ada data penjualan sama sekali.</h3>
        </div>
    <% } %>

<script>
    document.getElementById('searchInput').addEventListener('input', function() {
        const filter = this.value.toLowerCase();
        const monthContainers = document.querySelectorAll('.month-container');
        const noDataMsg = document.getElementById('noDataMessage');
        
        let anyMatchFound = false; // Penanda apakah ada data yang cocok secara global

        monthContainers.forEach(container => {
            const monthTitle = container.querySelector('.month-title').textContent.toLowerCase();
            const rows = container.querySelectorAll('.search-item');
            const isMonthMatch = monthTitle.includes(filter);
            
            let hasVisibleRowInThisMonth = false;

            rows.forEach(row => {
                const productName = row.querySelector('.product-name').textContent.toLowerCase();
                
                if (isMonthMatch || productName.includes(filter)) {
                    row.style.display = ''; 
                    hasVisibleRowInThisMonth = true;
                } else {
                    row.style.display = 'none'; 
                }
            });

            // Tampilkan container bulan jika ada baris yang cocok ATAU judul bulan cocok
            if (hasVisibleRowInThisMonth) {
                container.style.display = '';
                anyMatchFound = true; // Set ke true karena kita menemukan data
            } else {
                container.style.display = 'none';
            }
        });

        // Tampilkan pesan "Data tidak ditemukan" jika tidak ada satu pun yang cocok
        if (anyMatchFound) {
            noDataMsg.style.display = 'none';
        } else {
            noDataMsg.style.display = 'block';
        }
    });
</script>

<%- include('./partials/_footerAdmin') %>
