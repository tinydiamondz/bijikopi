<%- include('../partials/_headerAdmin', { title: 'Manajemen Food', user: user, page_name: 'foods' }) %>

<div class="section">
    <h2>Manajemen Makanan <a href="/admin/food/add" class="btn btn-add">+ Tambah Makanan</a></h2>
    <table>
        <thead>
            <tr><th>ID</th><th>Nama</th><th>Stok</th><th>Harga</th><th>Aksi</th></tr>
        </thead>
        <tbody>
            <% foods.forEach(f => { %>
                <tr>
                    <td><%= f.id_food %></td>
                    <td><%= f.name_food %></td>
                    <td><%= f.qty_food %></td>
                    <td>Rp <%= f.price_food.toLocaleString('id-ID') %></td>
                    <td class="actions">
                        <a href="/admin/food/edit/<%= f.id_food %>" class="btn btn-edit">Edit</a>
                        <form action="/admin/food/delete/<%= f.id_food %>" method="POST" onsubmit="return confirm('Yakin?');" style="display:inline;">
                            <button type="submit" class="btn btn-delete">Hapus</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/_footerAdmin') %>