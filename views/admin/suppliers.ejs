<%- include('../partials/_headerAdmin') %>

    <h1>Manage Suppliers</h1>

    <div class="header-actions">
        <a href="/admin/supplier/add" class="btn btn-add">+ Tambah Supplier</a>

        <div class="search-form">
            <input type="text" id="adminSearchInput" class="search-input" 
                   placeholder="ðŸ” Cari nama, email, alamat..." 
                   style="width: 300px;">
        </div>

        <a href="/admin/supplier/export" class="btn btn-export">Export CSV</a>
    </div>

    <div style="overflow-x: auto;">
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>
                        Nama Supplier
                        <a href="?sort=name_supplier&order=ASC" style="text-decoration:none; color:#ccc;">â–²</a>
                        <a href="?sort=name_supplier&order=DESC" style="text-decoration:none; color:#ccc;">â–¼</a>
                    </th>
                    <th>
                        Email
                        <a href="?sort=email_supplier&order=ASC" style="text-decoration:none; color:#ccc;">â–²</a>
                        <a href="?sort=email_supplier&order=DESC" style="text-decoration:none; color:#ccc;">â–¼</a>
                    </th>
                    <th>No. Telp</th>
                    <th>Alamat</th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                <% if(data.length > 0) { %>
                    <% data.forEach((item, index) => { %>
                    <tr class="search-item">
                        <td><%= index + 1 %></td>
                        <td class="search-name"><%= item.name_supplier %></td>
                        <td class="search-email"><%= item.email_supplier %></td>
                        <td class="search-phone"><%= item.pnumber_supplier %></td>
                        <td class="search-address"><%= item.address_supplier %></td>
                        <td class="actions">
                            <a href="/admin/supplier/edit/<%= item.id_supplier %>" class="btn btn-edit">Edit</a>
                            
                            <form action="/admin/supplier/delete/<%= item.id_supplier %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Yakin hapus?');">Hapus</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr id="noDataRow">
                        <td colspan="6" style="text-align:center;">Data tidak ditemukan.</td>
                    </tr>
                <% } %>

                <tr id="noSearchResult" style="display: none;">
                    <td colspan="6" style="text-align:center; padding: 20px; color: #666;">Tidak ada data yang cocok.</td>
                </tr>
            </tbody>
        </table>
    </div>

<%- include('../partials/_footerAdmin') %>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const searchInput = document.getElementById('adminSearchInput');
        const tableRows = document.querySelectorAll('.search-item');
        const noSearchResult = document.getElementById('noSearchResult');
        const noDataRow = document.getElementById('noDataRow');

        searchInput.addEventListener('input', function(e) {
            const searchValue = e.target.value.toLowerCase();
            let visibleCount = 0;

            tableRows.forEach(row => {
                const name = row.querySelector('.search-name').innerText.toLowerCase();
                const email = row.querySelector('.search-email').innerText.toLowerCase();
                const phone = row.querySelector('.search-phone').innerText.toLowerCase();
                const address = row.querySelector('.search-address').innerText.toLowerCase();

                if (name.includes(searchValue) || email.includes(searchValue) || phone.includes(searchValue) || address.includes(searchValue)) {
                    row.style.display = ""; 
                    visibleCount++;
                } else {
                    row.style.display = "none";
                }
            });

            if (visibleCount === 0) {
                if(noSearchResult) noSearchResult.style.display = "table-row";
                if(noDataRow) noDataRow.style.display = "none";
            } else {
                if(noSearchResult) noSearchResult.style.display = "none";
            }
        });
    });
</script>
