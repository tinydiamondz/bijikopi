<%- include('./partials/_headerAdmin') %>

    <h1>Manage Drinks</h1>

    <div class="header-actions">
        <a href="/admin/drink/add" class="btn btn-add">+ Tambah Minuman</a>

        <div class="search-form">
            <input type="text" id="adminSearchInput" class="search-input" 
                   placeholder="ðŸ” Ketik untuk mencari..." 
                   style="width: 300px;">
        </div>

        <a href="/admin/drink/export" class="btn btn-export">Export CSV</a>
    </div>

    <div style="overflow-x: auto;">
        <table>
            <thead>
                <tr>
                    <th>
                        Nama Minuman
                        <a href="?sort=name_drink&order=ASC" style="text-decoration:none; color:#ccc;">â–²</a>
                        <a href="?sort=name_drink&order=DESC" style="text-decoration:none; color:#ccc;">â–¼</a>
                    </th>
                    <th>
                        Stok
                        <a href="?sort=qty_drink&order=ASC" style="text-decoration:none; color:#ccc;">â–²</a>
                        <a href="?sort=qty_drink&order=DESC" style="text-decoration:none; color:#ccc;">â–¼</a>
                    </th>
                    <th>
                        Harga
                        <a href="?sort=price_drink&order=ASC" style="text-decoration:none; color:#ccc;">â–²</a>
                        <a href="?sort=price_drink&order=DESC" style="text-decoration:none; color:#ccc;">â–¼</a>
                    </th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                <% if(data.length > 0) { %>
                    <% data.forEach((item, index) => { %>
                    <tr class="search-item">
                        <td class="search-name"><%= item.name_drink %></td>
                        <td class="search-qty"><%= item.qty_drink %></td>
                        <td class="search-price">Rp <%= new Intl.NumberFormat('id-ID').format(item.price_drink) %></td>
                        <td class="actions">
                            <a href="/admin/drink/edit/<%= item.id_drink %>" class="btn btn-edit">Edit</a>
                            
                            <form action="/admin/drink/delete/<%= item.id_drink %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Yakin hapus?');">Hapus</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr id="noDataRow">
                        <td colspan="4" style="text-align:center;">Data tidak ditemukan.</td>
                    </tr>
                <% } %>

                <tr id="noSearchResult" style="display: none;">
                    <td colspan="4" style="text-align:center; padding: 20px; color: #666;">Tidak ada data yang cocok.</td>
                </tr>
            </tbody>
        </table>
    </div>

<%- include('../partials/_footerAdmin') %>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const searchInput = document.getElementById('adminSearchInput');
        const tableRows = document.querySelectorAll('.search-item');
        const noSearchResult = document.getElementById('noSearchResult');
        const noDataRow = document.getElementById('noDataRow');

        searchInput.addEventListener('input', function(e) {
            const searchValue = e.target.value.toLowerCase();
            let visibleCount = 0;

            tableRows.forEach(row => {
                const name = row.querySelector('.search-name').innerText.toLowerCase();
                const qty = row.querySelector('.search-qty').innerText.toLowerCase();
                const price = row.querySelector('.search-price').innerText.toLowerCase();
                const priceClean = price.replace(/[^0-9]/g, '');

                if (name.includes(searchValue) || qty.includes(searchValue) || price.includes(searchValue) || priceClean.includes(searchValue)) {
                    row.style.display = ""; 
                    visibleCount++;
                } else {
                    row.style.display = "none";
                }
            });

            if (visibleCount === 0) {
                if(noSearchResult) noSearchResult.style.display = "table-row";
                if(noDataRow) noDataRow.style.display = "none";
            } else {
                if(noSearchResult) noSearchResult.style.display = "none";
            }
        });
    });
</script>

