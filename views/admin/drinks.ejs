<%- include('../partials/_headerAdmin', { title: 'Manajemen Drink', user: user, page_name: 'drinks' }) %>

<div class="section">
    <h2>Manajemen Minuman <a href="/admin/drink/add" class="btn btn-add">+ Tambah Minuman</a></h2>
    <table>
        <thead>
            <tr><th>ID</th><th>Nama</th><th>Stok</th><th>Harga</th><th>Aksi</th></tr>
        </thead>
        <tbody>
            <% drinks.forEach(d => { %>
                <tr>
                    <td><%= d.id_drink %></td>
                    <td><%= d.name_drink %></td>
                    <td><%= d.qty_drink %></td>
                    <td>Rp <%= d.price_drink.toLocaleString('id-ID') %></td>
                    <td class="actions">
                        <a href="/admin/drink/edit/<%= d.id_drink %>" class="btn btn-edit">Edit</a>
                        <form action="/admin/drink/delete/<%= d.id_drink %>" method="POST" onsubmit="return confirm('Yakin?');" style="display:inline;">
                            <button type="submit" class="btn btn-delete">Hapus</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/_footerAdmin') %>