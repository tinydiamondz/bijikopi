<%- include('../partials/_headerAdmin') %>

    <h1>Manage Drinks</h1>

    <div class="header-actions">
        <a href="/admin/drink/add" class="btn btn-add">+ Tambah Minuman</a>

        <form action="/admin/drinks" method="GET" class="search-form">
            <input type="text" name="search" class="search-input" 
                   placeholder="Cari nama, stok, atau harga..." 
                   value="<%= search %>">
            <button type="submit" class="btn-search">Cari</button>
            <% if(search) { %>
                <a href="/admin/drinks" class="btn" style="background:#666; padding: 8px 15px;">Reset</a>
            <% } %>
        </form>

        <a href="/admin/drink/export" class="btn btn-export">Export CSV</a>
    </div>

    <div style="overflow-x: auto;">
        <table>
            <thead>
                <tr>
                    <th>Nama Minuman</th>
                    <th>Stok</th>
                    <th>Harga</th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                <% if(data.length > 0) { %>
                    <% data.forEach((item, index) => { %>
                    <tr>
                        <td><%= item.name_drink %></td>
                        <td><%= item.qty_drink %></td>
                        <td>Rp <%= new Intl.NumberFormat('id-ID').format(item.price_drink) %></td>
                        <td class="actions">
                            <a href="/admin/drink/edit/<%= item.id_drink %>" class="btn btn-edit">Edit</a>
                            
                            <form action="/admin/drink/delete/<%= item.id_drink %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Yakin hapus?');">Hapus</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" style="text-align:center;">Data tidak ditemukan.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

<%- include('../partials/_footerAdmin') %>
