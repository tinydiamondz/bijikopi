<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Foods Menu - Biji Kopi</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/foods.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            padding-top: 100px;
        }
        .search-wrapper {
            display: flex;
            justify-content: center;
            margin: 30px 0 20px 0;
            padding: 0 20px;
        }

        .search-input {
            width: 100%;
            max-width: 600px;
            padding: 15px 20px;
            border-radius: 30px;
            border: 2px solid #d4a373;
            background-color: #fff;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            outline: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .search-input:focus {
            border-color: #8b5e3c;
            box-shadow: 0 0 10px rgba(212, 163, 115, 0.5);
        }

        .no-result {
            display: none;
            text-align: center;
            width: 100%;
            font-family: 'Poppins', sans-serif;
            color: #666;
            margin-top: 20px;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    
    <% if (added == 1) { %>
    <div class="popup-overlay" id="popupOverlay">
        <div class="popup">
            <h3>Item successfully added to your cart! üõí</h3>
            <button id="closePopup">OK</button>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const popupOverlay = document.getElementById("popupOverlay");
            const closePopup = document.getElementById("closePopup");

            popupOverlay.style.display = "flex";

            closePopup.addEventListener("click", function() {
                popupOverlay.style.display = "none";
            });

            popupOverlay.addEventListener("click", function(e) {
                if (e.target === popupOverlay) {
                    popupOverlay.style.display = "none";
                }
            });
        });
    </script>
    <% } %>
    
    <nav>
        <div class="nav-left">
            <span class="points-display">
                ‚≠ê <%= point %> pts
            </span>
        </div>

        <div class="nav-center">
            <a href="/" class="<%= page === 'main' ? 'active' : '' %>">MAIN</a>
            <a href="/foods" class="<%= page === 'foods' ? 'active' : '' %>">FOODS</a>
            <a href="/drinks" class="<%= page === 'drinks' ? 'active' : '' %>">DRINKS</a>
            <a href="/cart" class="<%= page === 'cart' ? 'active' : '' %>">CART</a>
            <a href="/transactions" class="<%= page === 'history' ? 'active' : '' %>">HISTORY</a>
            <a href="/forum" class="<%= page === 'forum' ? 'active' : '' %>">FORUM</a>
        </div>
        <div class="nav-right">
            <span class="logged-as">
                LOGGED AS <%= role === "admin" ? user.fullname_admin : user.fullname_customer %>
            </span>
            <a href="/logout" class="login-btn">LOGOUT</a>
        </div>
    </nav>

    <div class="search-wrapper">
        <input type="text" id="foodSearch" class="search-input" placeholder="üîç Cari nama makanan, harga, atau deskripsi...">
    </div>

    <div class="container" id="foodContainer">
        
        <div id="noResultMsg" class="no-result">
            <p>Makanan tidak ditemukan üòî</p>
        </div>

        <% foods.forEach((food, index) => { %>
            <div class="food-item">

                <div class="food-img">
                    <img src="/images/foods/<%= food.image %>" alt="<%= food.name_food %>" style="width:100%; height:100%; object-fit:cover;">
                </div>

                <div class="food-info">
                    <h2 class="search-name"><%= food.name_food %></h2>
                    
                    <p class="search-price">Qty: <%= food.qty_food %> | Price: Rp <%= food.price_food.toLocaleString() %></p>
                    
                    <p class="search-desc">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Deskripsi menu di sini.</p>
                
                    <% if (food.qty_food > 0) { %>
                        <form action="/add-to-cart" method="POST">
                            <input type="hidden" name="id" value="<%= food.id_food %>">
                            <input type="hidden" name="type" value="food">
                            <button type="submit" class="add-btn">Add to Cart</button>
                        </form>
                    <% } else { %>
                        <button class="out-of-stock-btn" disabled>Out of Stock</button>
                    <% } %>

                </div>
            </div>
        <% }) %>
    </div>
    
    <script src="/views/cursor-glow.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const searchInput = document.getElementById('foodSearch');
            const foodItems = document.querySelectorAll('.food-item');
            const noResultMsg = document.getElementById('noResultMsg');

            searchInput.addEventListener('input', function(e) {
                const searchValue = e.target.value.toLowerCase();
                let visibleCount = 0;

                foodItems.forEach(item => {
                    const name = item.querySelector('.search-name').innerText.toLowerCase();
                    const price = item.querySelector('.search-price').innerText.toLowerCase();
                    const desc = item.querySelector('.search-desc').innerText.toLowerCase();

                    if (name.includes(searchValue) || price.includes(searchValue) || desc.includes(searchValue)) {
                        item.style.display = "";
                        visibleCount++;
                    } else {
                        item.style.display = "none";
                    }
                });

                if (visibleCount === 0) {
                    noResultMsg.style.display = "block";
                } else {
                    noResultMsg.style.display = "none";
                }
            });
        });
    </script>

</body>
</html>

