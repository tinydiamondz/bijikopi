<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Drinks Menu - Biji Kopi</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/drinks.css">
    <link rel="stylesheet" href="/css/popup.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    
    <style>
        body {
            padding-top: 100px;
        }
        .search-wrapper {
            display: flex;
            justify-content: center;
            margin: 30px 0 20px 0;
            padding: 0 20px;
        }

        .search-input {
            width: 100%;
            max-width: 600px;
            padding: 15px 20px;
            border-radius: 30px;
            border: 2px solid #2c3e50; /* Warna gelap khas drinks */
            background-color: #fff;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            outline: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .search-input:focus {
            border-color: #34495e;
            box-shadow: 0 0 10px rgba(44, 62, 80, 0.5);
        }

        .no-result {
            display: none;
            text-align: center;
            width: 100%;
            font-family: 'Poppins', sans-serif;
            color: #666;
            margin-top: 20px;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>

<%- include('partials/navbar') %>
    <% if (added == 1) { %>
    <div class="popup-overlay" id="popupOverlay">
        <div class="popup">
            <h3>Item successfully added to your cart! üõí</h3>
            <button id="closePopup">OK</button>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const popupOverlay = document.getElementById("popupOverlay");
            const closePopup = document.getElementById("closePopup");

            popupOverlay.style.display = "flex";

            closePopup.addEventListener("click", function() {
                popupOverlay.style.display = "none";
            });

            popupOverlay.addEventListener("click", function(e) {
                if (e.target === popupOverlay) {
                    popupOverlay.style.display = "none";
                }
            });
        });
    </script>
    <% } %>

    <div class="search-wrapper">
        <input type="text" id="drinkSearch" class="search-input" placeholder="üîç Cari minuman, harga, atau deskripsi...">
    </div>

    <div class="container" id="drinkContainer">
        
        <div id="noResultMsg" class="no-result">
            <p>Minuman tidak ditemukan ‚òï</p>
        </div>

        <% drinks.forEach((drink, index) => { %>
            <div class="drink-item">
                <div class="drink-img">
                    <img src="/images/drinks/<%= drink.image %>" alt="<%= drink.name_drink %>" style="width:100%; height:100%; object-fit:cover;">
                </div>

                <div class="drink-info">
                    <h2 class="search-name"><%= drink.name_drink %></h2>
                    
                    <p class="search-price">Qty: <%= drink.qty_drink %> | Price: Rp <%= drink.price_drink.toLocaleString() %></p>
                    
                    <p class="search-desc">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Deskripsi minuman di sini.</p>

                    <% if (drink.qty_drink > 0) { %>
                        <form action="/add-to-cart" method="POST">
                            <input type="hidden" name="id" value="<%= drink.id_drink %>">
                            <input type="hidden" name="type" value="drink">
                            <button type="submit" class="add-btn">Add to Cart</button>
                        </form>
                    <% } else { %>
                        <button class="out-of-stock-btn" disabled>Out of Stock</button>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const searchInput = document.getElementById('drinkSearch');
            const drinkItems = document.querySelectorAll('.drink-item');
            const noResultMsg = document.getElementById('noResultMsg');

            searchInput.addEventListener('input', function(e) {
                const searchValue = e.target.value.toLowerCase();
                let visibleCount = 0;

                drinkItems.forEach(item => {
                    const name = item.querySelector('.search-name').innerText.toLowerCase();
                    const price = item.querySelector('.search-price').innerText.toLowerCase();
                    const desc = item.querySelector('.search-desc').innerText.toLowerCase();

                    if (name.includes(searchValue) || price.includes(searchValue) || desc.includes(searchValue)) {
                        item.style.display = ""; 
                        visibleCount++;
                    } else {
                        item.style.display = "none";
                    }
                });

                if (visibleCount === 0) {
                    noResultMsg.style.display = "block";
                } else {
                    noResultMsg.style.display = "none";
                }
            });
        });
    </script>
    <!-- Popup Stock -->
    <div class="popup-overlay" id="stockPopup">
        <div class="popup">
            <h3>‚ö†Ô∏è Stok Terbatas!</h3>
            <p>Jumlah yang dipilih melebihi stok tersedia.</p>
            <button id="closeStockPopup">Oke</button>
        </div>
    </div>

        <script>
            function closeStockPopup() {
                document.getElementById('stockPopup').style.display = 'none';
            }
        </script>

    <% if (errorStock) { %>
        <script>
            const stockPopup = document.getElementById('stockPopup');
            stockPopup.style.display = 'flex';

            document.getElementById('closeStockPopup').addEventListener('click', closeStockPopup);
            stockPopup.addEventListener('click', function(e) {
                if(e.target === stockPopup) closeStockPopup();
            });
        </script>
    <% } %>


</body>
</html>

