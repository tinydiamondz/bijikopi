<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>History Pembayaran</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/transaction.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

</head>
<body>

<%- include('partials/navbar') %>
<div style="margin-top: 150px;"></div>

    <div class="container">
        <h1 style="font-family: 'Poppins', sans-serif; text-align: center; margin-bottom: 30px;">History Pembayaran</h1>

        <% if (transactions.length === 0) { %>
            <div style="text-align: center; margin-top: 50px; color: #666;">
                <p>Belum ada transaksi.</p>
                <a href="/foods" style="color: #d4a373; text-decoration: none; font-weight: bold;">Mulai Belanja</a>
            </div>
        <% } else { %>

            <div class="transaction-table-wrapper">
                <table class="transaction-table">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th>Tanggal</th>
                            <th>Detail Pesanan</th>
                            <th>Metode</th>
                            <th>Total Bayar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transactions.forEach(tr => { %>
                            <tr>
                                <td style="text-align: center;"><strong>#<%= tr.id_transaction %></strong></td>

                                <td>
                                    <div class="date-text">
                                        <%= new Date(tr.date_transaction).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                        <br>
                                        <%= new Date(tr.date_transaction).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %>
                                    </div>
                                </td>

                                <td>
                                    <ul class="menu-list">
                                        <% tr.items.forEach((menuName, index) => { %>
                                            <li class="menu-item">
                                                <span class="menu-qty"><%= tr.qtys[index] %>x</span>
                                                <%= menuName %>
                                            </li>
                                        <% }) %>
                                    </ul>
                                </td>

                                <td><%= tr.paymentMethod %></td>

                                <td style="font-weight: bold; color: #28a745;">
                                    Rp <%= tr.final_total.toLocaleString('id-ID') %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="total-history">
                <span class="icon">ðŸ’°</span>
                Total Pengeluaran: <strong style="color: #d4a373; margin-left: 5px;">Rp <%= totalHistory.toLocaleString('id-ID') %></strong>
            </div>

        <% } %>
    </div>
</body>
</html>
